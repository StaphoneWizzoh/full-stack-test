generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Teacher {
  id        Int      @id @default(autoincrement())
  name      String
  students  Student[]
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  teacherId Int
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  books     Book[]
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  studentId Int?
  student   Student? @relation(fields: [studentId], references: [id])
}